<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="followers"
            type="com.example.manar.twitterclientchallenge.viewmodel.FollowersItem" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="@{(view) -> followers.onFollowerClicked(view)}">

        <ImageView
            android:id="@+id/follower_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:circleImageUrl="@{followers.followerImage}"
            android:src="@drawable/twitter_icon_download_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/follower_name"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{followers.followerName}"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toEndOf="@id/follower_image"
            app:layout_constraintTop_toTopOf="@id/follower_image"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@{followers.followerBio}"
            android:textColor="@color/textColor"
            android:visibility="@{followers.description ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/follower_name"
            app:layout_constraintTop_toBottomOf="@id/follower_name" />

    </android.support.constraint.ConstraintLayout>
</layout>